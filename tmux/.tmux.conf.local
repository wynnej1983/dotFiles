# status left/right content:
#   - separate main sections with '|'
#   - separate subsections with ','
#   - built-in variables are:
#     - #{battery_bar}
#     - #{battery_hbar}
#     - #{battery_percentage}
#     - #{battery_status}
#     - #{battery_vbar}
#     - #{circled_session_name}
#     - #{hostname_ssh}
#     - #{hostname}
#     - #{loadavg}
#     - #{pairing}
#     - #{prefix}
#     - #{root}
#     - #{synchronized}
#     - #{uptime_y}
#     - #{uptime_d} (modulo 365 when #{uptime_y} is used)
#     - #{uptime_h}
#     - #{uptime_m}
#     - #{uptime_s}
#     - #{username}
#     - #{username_ssh}
delimiter=' '
space=' '
tmux_conf_theme_status_left=' #S '
tmux_conf_theme_status_right=' CPU #{cpu_percentage} | #{btc_usd}#{delimiter}#{usd_jpy}#{delimiter}#{iota_usd} | #(TZ="America/Los_Angeles" date +%%H:%%M)PT#{delimiter}#(TZ="Europe/Berlin" date +%%H:%%M)CET#{delimiter}#(TZ="Asia/Tokyo" date +%%H:%%M)JST#{space}'

